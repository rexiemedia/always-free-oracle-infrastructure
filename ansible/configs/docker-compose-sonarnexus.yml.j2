services:
  sonarqube:
    image: sonarqube:latest
    ports:
      - "9000:9000"
    environment:
      SONARQUBE_URL: jdbc:postgresql://db:5432/sonar
      SONARQUBE_USERNAME: {{ sonar_user }}
      SONARQUBE_PASSWORD: {{ sonar_pass }}
    depends_on:
      - db
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:9000 || exit 1"]
      interval: 15s
      retries: 20

  nexus:
    image: sonatype/nexus3:latest
    ports:
      - "8081:8081"
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:8081 || exit 1"]
      interval: 15s
      retries: 20

  db:
    image: postgres:14
    environment:
      POSTGRES_USER: {{ sonar_user }}
      POSTGRES_PASSWORD: {{ sonar_pass }}
      POSTGRES_DB: sonar
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ sonar_user }} -d sonar"]
      interval: 15s
      retries: 20
